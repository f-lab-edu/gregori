<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gregori.mapper.SessionMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.gregori.domain.auth.Session">
        INSERT INTO sessions (id, member_id)
        VALUES (#{id}, #{memberId})
    </insert>

    <delete id="delete">
        DELETE FROM sessions
        WHERE id = #{id}
    </delete>

    <select id="findById" resultType="com.gregori.domain.auth.Session" parameterType="String">
        SELECT id, member_id
        FROM sessions
        WHERE id = #{id}
    </select>
</mapper>
